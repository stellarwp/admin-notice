# PSR-12 Coding Standards
#
# https://www.php-fig.org/psr/psr-12/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{neon,neon.dist,js,xml,xml.dist}]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
